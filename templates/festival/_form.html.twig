{{ form_start(form, { attr: { class: 'space-y-6' } }) }}

{# Name and Location in same row #}
<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="border border-border rounded-xl p-4">
        {{ form_label(form.name, null, {
            label_attr: { class: 'block text-sm font-medium text-foreground mb-1' }
        }) }}
        {{ form_widget(form.name, {
            attr: {
                class: 'input input-bordered w-full bg-background text-foreground placeholder:text-muted-foreground'
            }
        }) }}
        {% if form_errors(form.name) %}
            <p class="mt-1 text-sm text-destructive">{{ form_errors(form.name) }}</p>
        {% endif %}
    </div>

    <div class="border border-border rounded-xl p-4">
        {{ form_label(form.location, null, {
            label_attr: { class: 'block text-sm font-medium text-foreground mb-1' }
        }) }}
        {{ form_widget(form.location, {
            attr: {
                class: 'input input-bordered w-full bg-background text-foreground placeholder:text-muted-foreground'
            }
        }) }}
        {% if form_errors(form.location) %}
            <p class="mt-1 text-sm text-destructive">{{ form_errors(form.location) }}</p>
        {% endif %}
    </div>
</div>

{# Start Date, End Date, Booking Price in same row #}
<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="border border-border rounded-xl p-4">
        {{ form_label(form.startDate, null, {
            label_attr: { class: 'block text-sm font-medium text-foreground mb-1' }
        }) }}
        {{ form_widget(form.startDate, {
            attr: {
                class: 'input input-bordered w-full bg-background text-foreground placeholder:text-muted-foreground'
            }
        }) }}
        {% if form_errors(form.startDate) %}
            <p class="mt-1 text-sm text-destructive">{{ form_errors(form.startDate) }}</p>
        {% endif %}
    </div>

    <div class="border border-border rounded-xl p-4">
        {{ form_label(form.endDate, null, {
            label_attr: { class: 'block text-sm font-medium text-foreground mb-1' }
        }) }}
        {{ form_widget(form.endDate, {
            attr: {
                class: 'input input-bordered w-full bg-background text-foreground placeholder:text-muted-foreground'
            }
        }) }}
        {% if form_errors(form.endDate) %}
            <p class="mt-1 text-sm text-destructive">{{ form_errors(form.endDate) }}</p>
        {% endif %}
    </div>

    <div class="border border-border rounded-xl p-4">
        {{ form_label(form.bookingPrice, null, {
            label_attr: { class: 'block text-sm font-medium text-foreground mb-1' }
        }) }}
        {{ form_widget(form.bookingPrice, {
            attr: {
                class: 'input input-bordered w-full bg-background text-foreground placeholder:text-muted-foreground'
            }
        }) }}
        {% if form_errors(form.bookingPrice) %}
            <p class="mt-1 text-sm text-destructive">{{ form_errors(form.bookingPrice) }}</p>
        {% endif %}
    </div>
</div>

{# Submit + Optional Delete Button #}
<div class="flex flex-col md:flex-row gap-4 pt-6">
    <button
        type="submit"
        class="btn text-white transition {{ (showDelete is defined and showDelete) ? 'w-full md:w-1/2' : 'w-full' }} btn-success">
        {{ button_label | default('Save') }}
    </button>

    {% if showDelete is defined and showDelete %}
        <div class="w-full md:w-1/2"
            {{ react_component('DeleteFestivalDialog', {
                festivalId: festival.id,
                csrfToken: csrf_token('delete' ~ festival.id),
            }) }}
        ></div>
    {% endif %}
</div>

{{ form_end(form) }}
