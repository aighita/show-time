{% include '_loading_screen.html.twig' %}
<body>
{# <div id="layout-root" class="flex min-h-screen w-full"> #}
{% block body %}{% endblock %}
{# </div> #}
</body>
<script>
    function removeLoader() {
        const loader = document.querySelector('.loader-wrapper');
        if (loader) {
            loader.style.opacity = '0';
            setTimeout(() => loader.remove(), 500);
        }
    }

    document.addEventListener('DOMContentLoaded', removeLoader);
    setTimeout(removeLoader, 500 + Math.random() * 1000 % 1000);
</script>
</html>
