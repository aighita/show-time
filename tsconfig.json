{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "esnext",
        "target": "es6",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["assets/*"]
        },
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["assets/**/*"]
}
